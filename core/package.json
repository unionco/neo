{
  "name": "@union/core",
  "version": "0.0.1",
  "description": "Core stencil component library for Union sites",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "es2015": "dist/esm/index.mjs",
  "es2017": "dist/esm/index.mjs",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "collection:main": "dist/collection/index.js",
  "unpkg": "dist/core/core.js",
  "files": [
    "dist/",
    "loader/",
    "css/"
  ],
  "scripts": {
    "build.all": "npm run clean && npm run build.css && npm run build.stencil",
    "build.css": "npm run css.sass && npm run css.minify",
    "build.stencil": "stencil build --docs",
    "clean": "node scripts/clean.js",
    "css.minify": "cleancss -O2 -o ./css/bundle.css ./css/bundle.css",
    "css.sass": "sass src/css:./css",
    "start": "npm run build.css && stencil build --dev --watch --serve",
    "dev": "npm run build.css && stencil build --watch",
    "test": "stencil test --spec --e2e",
    "test.watch": "stencil test --spec --e2e --watchAll",
    "generate": "stencil generate",
    "storybook": "concurrently \"start-storybook --port 9001\" \"npm run dev\"",
    "storybook-only": "start-storybook --port 9001"
  },
  "devDependencies": {
    "@stencil/core": "^1.7.5",
    "@stencil/react-output-target": "0.0.1",
    "@stencil/sass": "^1.1.1",
    "clean-css-cli": "^4.3.0",
    "concurrently": "^5.0.0",
    "fs-extra": "^8.1.0",
    "sass": "^1.23.3",
    "ts-loader": "^6.2.1"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/unionco/neo.git"
  },
  "dependencies": {
    "@babel/core": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@storybook/addon-a11y": "^5.1.11",
    "@storybook/addon-info": "^5.1.11",
    "@storybook/addon-knobs": "^5.1.11",
    "@storybook/addon-notes": "^5.1.11",
    "@storybook/addon-viewport": "^5.1.11",
    "@storybook/html": "^5.1.11",
    "@types/jest": "^24.0.18",
    "@types/swiper": "^4.4.8",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.6",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "plyr": "^3.5.6",
    "rfs": "^9.0.2",
    "storybook": "^5.1.11",
    "swiper": "^5.2.0",
    "typescript": "^3.6.2",
    "webpack": "^4.39.3"
  }
}
